/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "lib": [
      "es2018",
      "dom"
    ],

    "baseUrl": "src",
    "paths": {
      "app/*": ["app/*"],
      "models/*": ["app/models/*"],
      "actions/*": ["app/store/actions/*"],
      "effects/*": ["app/store/effects/*"],
      "reducers/*": ["app/store/reducers/*"],
      "selectors/*": ["app/store/selectors/*"],
      "characters/*": ["app/tabset-components/characters/*"],
      "deaths/*": ["app/tabset-components/deaths/*"],
      "quotes/*": ["app/tabset-components/quotes/*"],
    },
  }
}
